{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
    <hgroup>
        <h1>Login</h1>
    </hgroup>
    <form method="POST">
        {% if error %}
            <div class="error-msg">
                <i class="fa fa-times-circle"></i>
                <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
            </div>
        {% endif %}

        <div class="group">
            <input id="email-input" type="email" name="email" value="{{ last_username }}">
            <span class="highlight"></span><span class="bar"></span>
            <label id="email-label" data-field="Email">Email</label>
        </div>
        <div class="group">
            <input id="password-input" type="password" name="password" autocomplete="off">
            <span class="highlight"></span><span class="bar"></span>
            <label id="password-label" data-field="Password">Password</label>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit" class="button buttonBlue">Proceed
            <div class="ripples buttonRipples">
                <span class="ripplesCircle"></span>
            </div>
        </button>
    </form>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('login') }}
{% endblock %}